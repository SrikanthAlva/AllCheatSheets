using System;
using System.Collections.Generic;
using System.IO;
using System.Linq;
class CandidateCode {
    static void Main(String[] args) {
	//Write code here
    int T = Int32.Parse( System.Console.ReadLine().Trim());
    for(int i = 0; i < T; i++){
        int N = Int32.Parse(System.Console.ReadLine().Trim());
        string rawSet = System.Console.ReadLine();
        string[] setString = rawSet.Split(new char[] {' '}, StringSplitOptions.RemoveEmptyEntries);
		int[] Strengths = Array.ConvertAll(setString, int.Parse);
        string rawSet2 = System.Console.ReadLine();
        string[] setString2 = rawSet2.Split(new char[] {' '}, StringSplitOptions.RemoveEmptyEntries);
		int[] Energies = Array.ConvertAll(setString2, int.Parse);

        System.Console.WriteLine(T);
        System.Console.WriteLine(N);
        for(int j = 0; j < N; j++){
            System.Console.Write(Strengths[j]);
             System.Console.Write(" /"+ Energies[j]+"\n");
        }
       
    }
    }
}
